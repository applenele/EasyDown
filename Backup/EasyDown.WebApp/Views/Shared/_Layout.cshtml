<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - EasyDown</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="nav_left"><span style="font-size:15px;"><a href="/Home/Index" class="brand">欢迎来到EasyDown下载中心</a></span></div>
            <div class="nav_right">
                @{
                    if (ViewBag.CurrentUser != null)
                    {
                        if (ViewBag.CurrentUser.Picture == null)
                        {
                            <span><img src="~/Content/Images/userphoto.png" width="32" height="32" style="border-radius:50%;" alt="图像" /></span>
                        }
                        else
                        {
                            <span><img src="/User/ShowPicture/@ViewBag.CurrentUser.ID" width="32" height="32" style="border-radius:50%;" alt="图像" /></span>
                        }

                        <a href="/User/Show/@ViewBag.CurrentUser.ID">@ViewBag.CurrentUser.UserName</a>
                        <a href="/User/Logout" style="margin-left:10px;">注销</a>
                        <a href="/Resource/Upload" style="margin-left:10px;">上传</a>
                        <input type="hidden" id="userrole" name="userrole" value="@ViewBag.CurrentUser.Role" />
                    }
                    else
                    {
                        <a href="/User/Login">登陆</a>
                        <a href="/User/Register" style="margin-left:20px;">注册</a>
                    }
                }
            </div>
        </div>
    </header>
    <div class="clr" style="margin-top:54px;">
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <div class="footer container">
        <div id="easydown-copyright">Copyright © 2015 毕业设计</div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
